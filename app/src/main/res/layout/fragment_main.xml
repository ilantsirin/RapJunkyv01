<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray">
    <com.codeoasis.testwaves.utils.AudioView.GLAudioVisualizationView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/visualizer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:av_bubblesSize="20dp"
        app:av_bubblesRandomizeSizes="true"
        app:av_wavesHeight="60dp"
        app:av_wavesFooterHeight="170dp"
        app:av_wavesCount="7"
        app:av_layersCount="4"
        app:av_bubblesPerLayer="16"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/forward_music_button"


        android:layout_alignParentTop="true" />

    <com.codeoasis.testwaves.utils.BeatPlayerView.BeatPlayerView
        android:id="@+id/mpv"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        app:textSize = "14sp"
        app:textColor = "#80FFFFFF"
        app:buttonColor = "#FF0028"
        app:progressLoadedColor = "@color/red"
        app:progressEmptyColor = "#20FFFFFF"
        app:cover = "@drawable/e"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/back_music_button"
        android:layout_marginTop="95dp"
        android:src="@drawable/ic_skip_previous"
        android:layout_alignTop="@+id/mpv"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/forward_music_button"
        android:src="@drawable/ic_skip_next"
        android:layout_alignTop="@+id/back_music_button"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="lets rap"
        android:id="@+id/textView"
        android:textColor="@color/white"
        android:layout_marginBottom="77dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
